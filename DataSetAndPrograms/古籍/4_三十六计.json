  ],
  "domainUrl": "https://so.gushiwen.org",
  "bookUrn": "/guwen/book_4.aspx",
  "content": [
    {
      "upperChapter": "胜战计",
      "innerContent": [
        {
          "innerChapter_id": "52",
          "innerChapter": "胜战计_瞒天过海",
          "innerChapterUrn": "/guwen/bookv_52.aspx",
          "chapterContent": [
            "备周则意怠，常见则不疑。阴在阳之内，不在阳之对。太阳，太阴。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "53",
          "innerChapter": "胜战计_围魏救赵",
          "innerChapterUrn": "/guwen/bookv_53.aspx",
          "chapterContent": [
            "共敌不如分敌，敌阳不如敌阴。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "54",
          "innerChapter": "胜战计_借刀杀人",
          "innerChapterUrn": "/guwen/bookv_54.aspx",
          "chapterContent": [
            "敌已明，友未定，引友杀敌。不自出力，以《损》推演。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "55",
          "innerChapter": "胜战计_以逸待劳",
          "innerChapterUrn": "/guwen/bookv_55.aspx",
          "chapterContent": [
            "困敌之势，不以战。损刚益柔。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "56",
          "innerChapter": "胜战计_趁火打劫",
          "innerChapterUrn": "/guwen/bookv_56.aspx",
          "chapterContent": [
            "敌之害大，就势取利，刚决柔也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "57",
          "innerChapter": "胜战计_声东击西",
          "innerChapterUrn": "/guwen/bookv_57.aspx",
          "chapterContent": [
            "敌志乱萃，不虞。坤下兑上之象，利其不自主而取之。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        }
      ]
    },
    {
      "upperChapter": "敌战计",
      "innerContent": [
        {
          "innerChapter_id": "58",
          "innerChapter": "敌战计_无中生有",
          "innerChapterUrn": "/guwen/bookv_58.aspx",
          "chapterContent": [
            "诳也，非诳也，实其所诳也。少阴、太阴、太阳。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "59",
          "innerChapter": "敌战计_暗渡陈仓",
          "innerChapterUrn": "/guwen/bookv_59.aspx",
          "chapterContent": [
            "示之以动，利其静而有主，“益动而巽”。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "60",
          "innerChapter": "敌战计_隔岸观火",
          "innerChapterUrn": "/guwen/bookv_60.aspx",
          "chapterContent": [
            "阳乖序乱，阴以待逆。暴戾恣睢，其势自毙。顺以动豫，豫顺以动。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "61",
          "innerChapter": "敌战计_笑里藏刀",
          "innerChapterUrn": "/guwen/bookv_61.aspx",
          "chapterContent": [
            "信而安之，阴以图之。备而后动，勿使有变。刚中柔外也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "62",
          "innerChapter": "敌战计_李代桃僵",
          "innerChapterUrn": "/guwen/bookv_62.aspx",
          "chapterContent": [
            "势必有损，损阴以益阳。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "63",
          "innerChapter": "敌战计_顺手牵羊",
          "innerChapterUrn": "/guwen/bookv_63.aspx",
          "chapterContent": [
            "微隙在所必乘，微利在所必得。少阴，少阳。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        }
      ]
    },
    {
      "upperChapter": "攻战计",
      "innerContent": [
        {
          "innerChapter_id": "64",
          "innerChapter": "攻战计_打草惊蛇",
          "innerChapterUrn": "/guwen/bookv_64.aspx",
          "chapterContent": [
            "疑以叩实，察而后动。复者，阴之媒也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "65",
          "innerChapter": "攻战计_借尸还魂",
          "innerChapterUrn": "/guwen/bookv_65.aspx",
          "chapterContent": [
            "有用者，不可借；不能用者，求借。借不能用者而用之。匪我求童蒙，童蒙求我。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "66",
          "innerChapter": "攻战计_调虎离山",
          "innerChapterUrn": "/guwen/bookv_66.aspx",
          "chapterContent": [
            "待天以困之，用人以诱之，往蹇来连。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "67",
          "innerChapter": "攻战计_欲擒故纵",
          "innerChapterUrn": "/guwen/bookv_67.aspx",
          "chapterContent": [
            "逼则反兵，走则减势。紧随勿迫，累其气力，消其斗志，散而后擒，兵不血刃。需，有孚，光。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "68",
          "innerChapter": "攻战计_抛砖引玉",
          "innerChapterUrn": "/guwen/bookv_68.aspx",
          "chapterContent": [
            "类以诱之，击蒙也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "69",
          "innerChapter": "攻战计_擒贼擒王",
          "innerChapterUrn": "/guwen/bookv_69.aspx",
          "chapterContent": [
            "摧其坚，夺其魁，以解其体。龙战于野，其道穷也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        }
      ]
    },
    {
      "upperChapter": "混战计",
      "innerContent": [
        {
          "innerChapter_id": "70",
          "innerChapter": "混战计_釜底抽薪",
          "innerChapterUrn": "/guwen/bookv_70.aspx",
          "chapterContent": [
            "不敌其力，而消其势，兑下乾上之象。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "71",
          "innerChapter": "混战计_混水摸鱼",
          "innerChapterUrn": "/guwen/bookv_71.aspx",
          "chapterContent": [
            "乘其阴乱，利其弱而无主。随，以向晦入宴息。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "72",
          "innerChapter": "混战计_金蝉脱壳",
          "innerChapterUrn": "/guwen/bookv_72.aspx",
          "chapterContent": [
            "存其形，完其势；友不疑，敌不动。巽而止蛊。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "73",
          "innerChapter": "混战计_关门捉贼",
          "innerChapterUrn": "/guwen/bookv_73.aspx",
          "chapterContent": [
            "小敌困之。剥，不利有攸往。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "74",
          "innerChapter": "混战计_远交近攻",
          "innerChapterUrn": "/guwen/bookv_74.aspx",
          "chapterContent": [
            "形禁势格，利从近取，害以远隔。上火下泽。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "75",
          "innerChapter": "混战计_假道伐虢",
          "innerChapterUrn": "/guwen/bookv_75.aspx",
          "chapterContent": [
            "两大之间，敌胁以从，我假以势。困，有言不信。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        }
      ]
    },
    {
      "upperChapter": "并战计",
      "innerContent": [
        {
          "innerChapter_id": "76",
          "innerChapter": "并战计_偷梁换柱",
          "innerChapterUrn": "/guwen/bookv_76.aspx",
          "chapterContent": [
            "频更其阵，抽其劲旅，待其自败，而后乘之。曳其轮也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "77",
          "innerChapter": "并战计_指桑骂槐",
          "innerChapterUrn": "/guwen/bookv_77.aspx",
          "chapterContent": [
            "大凌小者，警以诱之。刚中而应，行险而顺。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "78",
          "innerChapter": "并战计_假痴不癫",
          "innerChapterUrn": "/guwen/bookv_78.aspx",
          "chapterContent": [
            "宁伪作不知不为，不伪作假知妄为。静不露机，云雷屯也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "79",
          "innerChapter": "并战计_上屋抽梯",
          "innerChapterUrn": "/guwen/bookv_79.aspx",
          "chapterContent": [
            "假之以便，唆之使前，断其援应，陷之死地。遇毒，位不当也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "80",
          "innerChapter": "并战计_树上开花",
          "innerChapterUrn": "/guwen/bookv_80.aspx",
          "chapterContent": [
            "借局布势，力小势大。鸿渐于陆，其羽可以为仪也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "81",
          "innerChapter": "并战计_反客为主",
          "innerChapterUrn": "/guwen/bookv_81.aspx",
          "chapterContent": [
            "乘隙插足，扼其主机，渐之进也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        }
      ]
    },
    {
      "upperChapter": "败战计",
      "innerContent": [
        {
          "innerChapter_id": "82",
          "innerChapter": "败战计_美人计",
          "innerChapterUrn": "/guwen/bookv_82.aspx",
          "chapterContent": [
            "兵强者，攻其将；将智者，伐其情。将弱兵颓，其势自萎。利用御寇，顺相保也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "83",
          "innerChapter": "败战计_空城计",
          "innerChapterUrn": "/guwen/bookv_83.aspx",
          "chapterContent": [
            "虚者虚之，疑中生疑。刚柔之际，奇而复奇。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "84",
          "innerChapter": "败战计_反间计",
          "innerChapterUrn": "/guwen/bookv_84.aspx",
          "chapterContent": [
            "疑中之疑。比之自内，不自失也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "85",
          "innerChapter": "败战计_苦肉计",
          "innerChapterUrn": "/guwen/bookv_85.aspx",
          "chapterContent": [
            "人不自害，受害必真。假真真假，间以得行。童蒙之吉，顺以巽也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "86",
          "innerChapter": "败战计_连环计",
          "innerChapterUrn": "/guwen/bookv_86.aspx",
          "chapterContent": [
            "将多兵众，不可以敌，使其自累，以杀其势。在师中吉，承天宠也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        },
        {
          "innerChapter_id": "87",
          "innerChapter": "败战计_走为上计",
          "innerChapterUrn": "/guwen/bookv_87.aspx",
          "chapterContent": [
            "全师避敌。左次无咎，未失常也。"
          ],
          "authorName": "佚名",
          "author_id": 15791
        }
      ]
    }
  ]
}